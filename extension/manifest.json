{
    "manifest_version": 3,
    "name": "LinkedGage",
    "version": "1.0",
    "description": "Generates personalized comments on LinkedIn posts based on user-selected tones, helping users engage effectively.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "tabs", 
      "identity"
    ],
    "host_permissions": [
      "https://dashboard.linkedgage.com/*",
      "https://api.linkedgage.com/*",
      "https://www.linkedin.com/*"
    ],
    "web_accessible_resources": [
      {
        "resources": ["icons/icon48.png"],
        "matches": ["https://www.linkedin.com/*", "https://dashboard.linkedgage.com/*", "https://api.linkedgage.com/*"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
        {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["scripts/contentScript.js"],
        "css": ["styles/styles.css"],
        "run_at": "document_idle"
        }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon64.png",
      "128": "icons/icon128.png"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "externally_connectable": {
      "matches": [
          "https://*.chromiumapp.org/*",
          "https://dashboard.linkedgage.com/*",
          "https://api.linkedgage.com/*"
      ]
    }
}
  